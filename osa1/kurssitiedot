const Header = (props) => {

  return (
<div>
  <p> <h1> {props.coursename} </h1> </p>
</div>

  )
}

const Part = (props) => {

return (

  <div>

    <p> {props.partname} {props.partnumber}

    </p>
  </div>
)

}

const Content = (props) => {


return (

<div>

<Part partname = {props.partname1} partnumber = {props.partnumber1}/>
<Part partname = {props.partname2} partnumber = {props.partnumber2}/>
<Part partname = {props.partname3} partnumber = {props.partnumber3}/>

</div>

)

}

const Total = (props) => {

return(

<div>

  <p>
    Number of exercises {props.total}
  </p>
</div>

)

}

const App = () => {
  const course = 'Half Stack application development'
  const part1 = 'Fundamentals of React'
  const exercises1 = 10
  const part2 = 'Using props to pass data'
  const exercises2 = 7
  const part3 = 'State of a component'
  const exercises3 = 14

  return (
    <div>
      <Header coursename = {course} />
      <Content partname1 = {part1} partname2= {part2} partname3 = {part3} partnumber1 = {exercises1} partnumber2 = {exercises2} partnumber3 = {exercises3}/>
     <Total total = {exercises1 + exercises2 + exercises3}/>
    </div>
  )
}

export default App
