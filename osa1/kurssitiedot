const Header = (props) => {

  console.log(props)

  const course = props.courseInfo;

  return (
<div>
   <h1> {course.name} </h1> 
</div>

  )
}



const Content = (props) => {

const partsMap = props.parts;
  console.log(props)

const showParts = partsMap.map((value,index) =>
  
  <div key = {value.name + index}> <p> {value.name} {value.exercises} </p>
  
</div>
)

return (
  <div> 
{showParts}
</div>
)

}
const Total = (props) => {

const partsMap = props.parts;
var total = partsMap.reduce((accum,item) => accum + item.exercises, 0)
return (

<div>

<p> Total: {total}</p>

</div>

)


}

const App = () => {
  const course = {
    name: 'Half Stack application development',
    parts: [
      {
        name: 'Fundamentals of React',
        exercises: 10
      },
      {
        name: 'Using props to pass data',
        exercises: 7
      },
      {
        name: 'State of a component',
        exercises: 14
      }
    ]
  }
  

  return (
   
    <div>

      <Header courseInfo = {course} />
    <Content parts={course.parts}/>
    <Total parts = {course.parts}/>
    </div>
    
  );
  
}

export default App
